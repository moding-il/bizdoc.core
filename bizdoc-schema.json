{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "BizDoc Configuration Schema",

  "type": "object",

  "definitions": {
    "shape": {
      "type": "object",
      "properties": {
        "Type": {
          "type": "string",
          "enum": [ "Text", "Bpmn", "Flow" ]
        },
        "Shape": {
          "type": "string",
          "enum": [ "SwimLane", "Rectangle", "ManualOperation", "Document", "Process", "Decision", "OffPageReference", "PaperTap", "Event", "Terminator", "Task", "Message", "PreDefinedProcess", "Activity" ]
        },
        "Event": {
          "type": "object",
          "properties": {
            "Event": {
              "type": "string"
            },
            "Trigger": {
              "type": "string"
            }
          },
          "required": [ "Event" ]
        },
        "Activity": { "type": "object" },
        "Trigger": {
          "type": "object"
        },
        "Lanes": {
          "type": "array",
          "items": {
            "properties": {
              "Id": { "type": "string" },
              "Height": { "type": "number" },
              "Header": {
                "type": "object",
                "properties": {
                  "Annotation": {
                    "type": "object",
                    "properties": { "Content": { "type": "string" } }
                  },
                  "Width": { "type": "number" }
                }
              }
            }
          }
        },
        "Phases": {
          "type": "array",
          "items": {
            "properties": {
              "Id": { "type": "string" },
              "Offset": { "type": "number" },
              "Header": {
                "type": "object",
                "properties": {
                  "Content": {
                    "type": "object",
                    "properties": { "Content": { "type": "string" } }
                  }
                }
              }
            }
          }
        },
        "PhaseSize": { "type": "number" }
      },
      "required": [ "Type" ]
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "fillColor": {
            "type": "string",
            "format": "color"
          },
          "verticalAlignment": {
            "type": "string"
          },
          "mode": {
            "type": "string"
          },
          "segmentOffset": {
            "type": "number"
          },
          "text": {
            "type": "string"
          },
          "offset": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            },
            "required": [
              "x",
              "y"
            ]
          },
          "margin": {
            "type": "object",
            "properties": {
              "top": {
                "type": "number"
              },
              "left": {
                "type": "number"
              },
              "right": {
                "type": "number"
              },
              "bottom": {
                "type": "number"
              }
            },
            "required": [
              "top",
              "left"
            ]
          }
        }
      }
    },
    "decorator": {
      "type": "object",
      "properties": {
        "Shape": {
          "type": "string"
        },
        "Width": {
          "type": "integer"
        },
        "Height": {
          "type": "integer"
        },
        "BorderWidth": {
          "type": "integer"
        }
      }
    },
    "workflow": {
      "type": "object",
      "properties": {
        "ScrollSettings": {
          "type": "object",
          "properties": {
            "currentZoom": {
              "type": "number"
            },
            "horizontalOffset": {
              "type": "number"
            },
            "verticalOffset": {
              "type": "number"
            },
            "zoomFactor": {
              "type": "number"
            }
          },
          "required": [
            "currentZoom",
            "horizontalOffset",
            "verticalOffset",
            "zoomFactor"
          ]
        },
        "Connectors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "LineDashArray": {
                "type": "string"
              },
              "Id": {
                "type": "string"
              },
              "TargetDecorator": {
                "$ref": "#/definitions/decorator"
              },
              "SourceDecorator": {
                "$ref": "#/definitions/decorator"
              },
              "LineWidth": {
                "type": "integer"
              },
              "Constraints": {
                "type": "integer"
              },
              "Segments": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "Type": {
                      "type": "string"
                    },
                    "Points": {
                      "type": "array",
                      "items": {
                        "$ref": "#/definitions/point"
                      }
                    }
                  },
                  "required": [
                    "Type"
                  ]
                }
              },
              "CornerRadius": {
                "type": "number"
              },
              "SourcePoint": {
                "$ref": "#/definitions/point"
              },
              "TargetPoint": {
                "$ref": "#/definitions/point"
              },
              "AddInfo": {
                "type": "object",
                "properties": {
                  "actionName": {
                    "type": "string"
                  },
                  "Case": { "type": "string" }
                }
              },
              "TargetID": {
                "type": "string"
              },
              "SourceID": {
                "type": "string"
              }
            },
            "required": [
              "Id",
              "TargetID",
              "SourceID"
            ]
          }
        },
        "Nodes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Parent": {
                "type": "string"
              },
              "RotateAngle": {
                "type": "number"
              },
              "Width": {
                "type": "number"
              },
              "Height": {
                "type": "number"
              },
              "OffsetX": {
                "type": "number"
              },
              "OffsetY": {
                "type": "number"
              },
              "Id": {
                "type": "string"
              },
              "AddInfo": {
                "type": "object",
                "properties": {
                  "nodeType": { "type": "string" },
                  "standardTime": { "type": [ "string", "null" ] }
                },
                "required": [ "nodeType" ]
              },
              "Shape": {
                "$ref": "#/definitions/shape"
              },
              "Ports": {
                "type": "array",
                "items": {}
              },
              "Pivot": {
                "$ref": "#/definitions/point"
              },
              "BorderWidth": {
                "type": "integer"
              },
              "BorderDashArray": {
                "type": "string"
              },
              "ZOrder": {
                "type": "integer"
              },
              "Constraints": {
                "type": "integer"
              }
            },
            "required": [
              "Id",
              "Shape"
            ]
          }
        }
      },
      "required": [
        "Connectors",
        "Nodes"
      ]
    },
    "point": {
      "type": "object",
      "properties": {
        "X": {
          "type": "number"
        },
        "Y": {
          "type": "number"
        }
      },
      "required": [
        "X",
        "Y"
      ]
    },
    "privileges": {
      "type": "object",
      "properties": {
        "Privileges": {
          "type": "object",
          "description": "Restrict element to authorized roles or a rule expression.",
          "properties": {
            "Rule": {
              "type": "string",
              "description": "Expression evaluated by RuleEngine service."
            },
            "Roles": {
              "type": "array",
              "items": { "type": "string" },
              "description": "List of authorized roles."
            }
          }
        }
      }
    },
    "axis": {
      "description": "Axis name or array of axes names.",
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Za-z]([\\-_]{0,1}[a-zA-Z0-9]+)+$",
            "uniqueItems": true
          }
        },
        {
          "type": "string",
          "pattern": "^[A-Za-z]([\\-_]{0,1}[a-zA-Z0-9]+)+$"
        }
      ]
    },
    "base": {
      "type": "object",
      "properties": {
        "Name": {
          "type": "string",
          "pattern": "^[A-Za-z]([\\-_]{0,1}[a-zA-Z0-9]+)+$"
        },
        "Title": {
          "type": "string"
        },
        "Options": {
          "type": "object"
        },
        "ResourceType": {
          "type": "string"
        }
      },
      "required": [
        "Name",
        "Title"
      ]
    },
    "code": {
      "allOf": [
        { "$ref": "#/definitions/base" },
        {
          "properties": {
            "Type": {
              "type": "string",
              "description": "Implementation type and assembly."
            },
            "Disabled": {
              "type": "boolean",
              "default": true
            }
          },
          "required": [
            "Type"
          ]
        }
      ]
    }
  },
  "properties": {
    "Currencies": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/base" },
          {
            "properties": {
              "Symbol": { "type": "string" }
            }
          }
        ]
      }
    },
    "Folders": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/base" },
          { "$ref": "#/definitions/privileges" },
          {
            "properties": {
              "Columns": {
                "type": "array",
                "items": {
                  "properties": {
                    "Name": {
                      "type": "string",
                      "pattern": "^[A-Za-z]\\w*$",
                      "enum": [ "number", "subject", "value", "owner", "sender", "received", "replied", "state" ]
                    },
                    "Title": {
                      "type": "string"
                    },
                    "ResourceType": {
                      "type": "string"
                    },
                    "Type": {
                      "type": "string",
                      "enum": [
                        "Date",
                        "Boolean",
                        "Decimal",
                        "Text"
                      ]
                    }
                  },
                  "required": [ "Name" ]
                },
                "Icon": {
                  "type": "string"
                }
              }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "States": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/base" },
          {
            "properties": {
              "Past": {
                "type": "string"
              },
              "Color": {
                "type": "string",
                "format": "color"
              },
              "Hidden": { "type": "boolean" }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "Actions": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          {
            "properties": {
              "Past": {
                "type": "string"
              },
              "Verb": {
                "type": "string"
              },
              "TitleMale": {
                "type": "string"
              },
              "TitleFemale": {
                "type": "string"
              },
              "Adjective": {
                "type": "string"
              },
              "AdjectivePlural": {
                "type": "string"
              }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "Roles": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/base" },
          {
            "properties": {
              "DataType": {
                "Type": "string"
              },
              "Rank": {
                "Type": "number",
                "minimum": -128,
                "maximum": 127
              },
              "Positions": {
                "type": "object",
                "patternProperties": {
                  "^.*$": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                },
                "additionalProperties": false
              }
            },
            "required": [
              "DataType"
            ]
          }
        ]
      },
      "additionalProperties": false
    },
    "Forms": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          { "$ref": "#/definitions/privileges" },
          {
            "properties": {
              "Format": {
                "type": "string"
              },
              "Template": {
                "type": "string"
              },
              "Position": {
                "type": "string",
                "enum": [ "Require", "Ask", "None" ]
              },
              "Workflow": {
                "$ref": "#/definitions/workflow"
              },
              "Icon": {
                "type": "string"
              },
              "Rules": {
                "patternProperties": {
                  "^.*$": {
                    "type": "object",
                    "properties": {
                      "Roles": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "Rule": { "type": "string" },
                      "Title": { "type": "string" }
                    }
                  }
                }
              },
              "History": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/workflow"
                }
              }
            },
            "required": [
              "Format",
              "Workflow"
            ]
          }
        ]
      },
      "additionalProperties": false
    },
    "Reports": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          { "$ref": "#/definitions/privileges" },
          {
            "properties": {
              "Template": {
                "type": "string"
              },
              "Icon": { "type": "string" },
              "ArgumentsTemplate": { "type": "string" }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "Types": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          {
            "properties": {
              "Assignable": {
                "type": "boolean"
              },
              "Groups": {
                "type": "array",
                "items": {
                  "properties": {
                    "Name": { "type": "string" },
                    "Title": { "type": "string" },
                    "items": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              },
              "Patterns": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "Expression": { "type": "string" },
                    "Name": { "type": "string" },
                    "Title": { "type": "string" }
                  }
                }
              }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "Nodes": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          {
            "properties": {
              "Palette": {
                "type": "string"
              },
              "Shape": {
                "$ref": "#/definitions/shape"
              }
            },
            "required": [
              "Shape"
            ]
          }
        ]
      },
      "additionalProperties": false
    },
    "Cubes": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          { "$ref": "#/definitions/privileges" },
          {
            "properties": {
              "YAxis": {
                "type": "object",
                "properties": {
                  "Title": {
                    "type": "string"
                  }
                }
              },
              "CurrencyCode": { "type": "string" },
              "Template": {
                "type": "string"
              },
              "Axes": {
                "type": "array",
                "items": {
                  "allOf": [
                    { "$ref": "#/definitions/base" },
                    {
                      "properties": {
                        "Sensitive": {
                          "type": "boolean",
                          "description": "Anomaly notification group"
                        },
                        "SelectionMode": {
                          "description": "User interaction in filters",
                          "enum": [ "Single", "Pattern", "Multiple" ]
                        },
                        "Combination": {
                          "type": "boolean",
                          "description": "Is an account segment"
                        },
                        "Indexable": {
                          "type": "boolean",
                          "description": "Meaningful in Indices queries. Set false for cube-only axes"
                        },
                        "DataType": {
                          "type": "string",
                          "description": "Name of type associated with this axis"
                        },
                        "Hidden": { "type": "boolean" }
                      },
                      "required": [ "DataType" ]
                    }
                  ]
                },
                "additionalProperties": false
              },
              "Patterns": {
                "type": "array",
                "items": {
                  "allOf": [
                    { "$ref": "#/definitions/base" },
                    {
                      "properties": {
                        "Roles": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "Axes": {
                          "type": "object",
                          "patternProperties": {
                            "^[A-Za-z][\\w]+$": {
                              "type": [ "array", "string", "number" ],
                              "pattern": "^[\\w\\*\\#\\.\\-\\,\\;]+$",
                              "description": "*., digits and letters",
                              "items": {
                                "type": [ "string", "number" ],
                                "pattern": "^[\\w\\*\\#\\.\\-]+$"
                              }
                            }
                          },
                          "minProperties": 1,
                          "description": ""
                        },
                        "Rule": {
                          "type": "string",
                          "description": "Expression evaluated by RuleEngine service."
                        }
                      },
                      "required": [ "Roles", "Axes" ]
                    }
                  ]
                },
                "additionalProperties": false
              },
              "Views": {
                "type": "array",
                "items": {
                  "allOf": [
                    { "$ref": "#/definitions/base" },
                    { "$ref": "#/definitions/privileges" },
                    {
                      "properties": {
                        "Icon": { "type": "string" },
                        "Filters": {
                          "type": "object",
                          "patternProperties": {
                            "^[A-Za-z][\\w]*$": {
                              "type": [ "array", "string", "number" ],
                              "pattern": "^[\\w\\*\\#\\.]+$",
                              "items": {
                                "type": [ "string", "number" ],
                                "pattern": "^[\\w\\*\\#\\.]+$"
                              }
                            }
                          }
                        },
                        "Type": {
                          "type": "string",
                          "default": "Chart",
                          "enum": [
                            "Pivot",
                            "Chart"
                          ]
                        },
                        "ChartType": {
                          "type": "string",
                          "default": "Column",
                          "enum": [
                            "Pie",
                            "Bar",
                            "StackingBar",
                            "Line",
                            "StepLine",
                            "Column",
                            "StackingColumn",
                            "Area",
                            "Spline",
                            "SplineArea",
                            "Doughnut",
                            "HalfDoughnut",
                            "Polar",
                            "Radar",
                            "StepArea"
                          ]
                        },
                        "Series": {
                          "$ref": "#/definitions/axis"
                        },
                        "XAxis": {
                          "$ref": "#/definitions/axis"
                        },
                        "Indices": {
                          "description": "Cube index name or array of indices names.",
                          "anyOf": [
                            {
                              "type": "array",
                              "items": {
                                "type": "string",
                                "pattern": "^[A-Za-z]([\\-_]{0,1}[a-zA-Z0-9]+)+$",
                                "uniqueItems": true
                              }
                            },
                            {
                              "type": "string",
                              "pattern": "^[A-Za-z]([\\-_]{0,1}[a-zA-Z0-9]+)+$"
                            }
                          ]
                        }
                      },
                      "required": [ "XAxis" ]
                    }
                  ]
                },
                "additionalProperties": false
              },
              "Indices": {
                "type": "array",
                "items": {
                  "allOf": [
                    { "$ref": "#/definitions/base" },
                    {
                    }
                  ]
                }
              }
            },
            "required": [
              "Axes",
              "Views"
            ]
          }
        ]
      },
      "additionalProperties": false
    },
    "Rules": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          {
          }
        ]
      },
      "additionalProperties": false
    },
    "Utilities": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          { "$ref": "#/definitions/privileges" },
          {
            "properties": {
              "Template": {
                "type": "string"
              },
              "Icon": { "type": "string" }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "Widgets": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/code" },
          { "$ref": "#/definitions/privileges" },
          {
            "properties": {
              "Template": {
                "type": "string"
              },
              "Cols": { "type": "number" },
              "Rows": { "type": "number" }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "Guides": {
      "type": "array",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/base" },
          {
            "properties": {
              "Disabled": { "type": "boolean" },
              "Steps": {
                "type": "array",
                "items": {
                  "allOf": [
                    { "$ref": "#/definitions/base" },
                    {
                      "properties": {
                        "Selector": {
                          "type": "string"
                        },
                        "Note": {
                          "type": "string"
                        },
                        "Position": {
                          "enum": [ "Below", "Above", "Before", "After" ]
                        },
                        "Navigate": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "Note"
                      ]
                    }
                  ]
                },
                "additionalProperties": false
              },
              "Private": {
                "type": "boolean"
              }
            },
            "required": [
              "Steps"
            ]
          }
        ]
      },
      "additionalProperties": false
    }
  },
  "required": [
    "Folders",
    "States",
    "Actions",
    "Roles",
    "Forms",
    "Reports",
    "Types",
    "Nodes",
    "Cubes",
    "Rules",
    "Widgets",
    "Currencies"
  ]
}
